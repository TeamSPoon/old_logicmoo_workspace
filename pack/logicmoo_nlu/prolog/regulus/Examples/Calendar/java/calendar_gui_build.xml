<?xml version="1.0" encoding="UTF-8"?>
   <project name="gui.makejar" default="distrib" basedir="./issco/calendar">
	    <description>
    	    Build file for Calendar GUI
    	</description>
  	<!-- set global properties for this build -->
   	<property environment="env"/>
  	<property name="src" location="."/>
	<property name="reg" location="./../../../../../RegulusSpeechServer/runtime/regclient.jar"/>
  	<property name="build" location="build"/>
  	<property name="distrib"  location="./../../"/>
  	<path id="regclient.classpath">
        <pathelement location="${reg}" />

  <!-- ./../../../RegulusSpeechServer/runtime/regclient.jar"/>
-->  
</path>
  	<target name="init">
    	<!-- Create the build directory structure used by compile -->
	    <mkdir dir="${build}"/>
  	</target>

  	<target name="compile" depends="init"
   		    description="compile the source " >
    	<!-- Compile the java code from ${src} into ${build} -->
    	<javac debug="true" srcdir="${src}" destdir="${build}" verbose="false">
                <classpath refid="regclient.classpath"/>
         </javac>
  	</target>

  	<target name="distrib" depends="compile"
    	    description="generate the distribution" >
    	<!-- Create the distribution directory -->
    	<mkdir dir="${distrib}"/>

    	<!-- Put everything in ${build} into the calendar.jar file -->
    	<jar jarfile="${distrib}/calendar.jar" basedir="${build}"/>
	  </target>
	
  	<target name="clean"
    	    description="clean up" >
  	<!--  Delete the ${build} directory trees -->
    	<delete dir="${build}"/>
  	</target>
</project>
% Tests comparisons of numbers with floating points.
%---------------------------------------------------------------

solve( X, Y, Z ) :- D is Y * Y - 4 * X * Z, findRoots( X, Y, Z, D ).

findRoots( X, Y, _, D ) :- D =:= 0.0, X1 is -Y / ( 2 * X ),
    write( 'x1 = x2 = ' ), write( X1 ).
findRoots( X, Y, _, D ) :- D > 0.0, X1 is ( -Y + sqrt(D) ) / ( 2 * X ),
    X2 is ( -Y - sqrt(D) ) / ( 2 * X ), write( 'x1 = ' ),
    write( X1 ), tab(5), write( 'x2 = ' ), write( X2 ).
findRoots( _, _, _, D ) :- D < 0.0, write( 'There are no real roots' ).

